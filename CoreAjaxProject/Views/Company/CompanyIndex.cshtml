@{
    ViewData["Title"] = "Firma Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<button class="btn btn-primary m-2" id="btnAddCompany">Firma Ekle</button>
<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>
                Firma ID
            </th>
            <th>
                Firma Adı
            </th>
            <th>
                Açıklama Alanı
            </th>
            <th>
                Yetkili Adı:
            </th>
            <th>
                Yetkili İletişim No:
            </th>
            <th>
                Vergi Dairesi:
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody class="text-center" id="tableData">
    </tbody>
</table>
<div class="modal fade" id="CompanyModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="CompanyHeading"><strong>Firma Ekle</strong></h1>
                <button class="close text-danger" onclick="HideModalPopUp()">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="CompID">
                        <label>Firma ID</label>
                        <input type="text" class="form-control" id="CompanyID" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label>Firma Adı</label>
                        <input type="text" placeholder="Firma Adı Giriniz" class="form-control" id="CompName" autocomplete="on" />
                    </div>
                    <div class="form-group">
                        <label>Açıklama Alanı</label>
                        <input type="text" placeholder="Açıklama Giriniz" class="form-control" id="Desc" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Yetkili Adı</label>
                        <input type="text" placeholder="Yetkili Adı Giriniz" class="form-control" id="Contct" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Yetkili Telefon No</label>
                        <input type="text" placeholder="Yetkili Telefon No Giriniz" class="form-control" id="ContctPhn" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Vergi Dairese Bilgisi</label>
                        <input type="text" placeholder="Vergi Dairesi Giriniz" class="form-control" id="Tax" autocomplete="off" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button onclick="AddComp()" class="btn btn-primary" id="addComp">Kaydet</button>
                <button onclick="UpdateComp()" class="btn btn-warning" style="display:none" id="updateComp">Güncelle</button>
                <button onclick="HideModalPopUp()" class="btn btn-danger">Kapat</button>
            </div>
        </div>
    </div>
</div>
<div>
    <input type="hidden" id="urlCompanyData" value="@Url.Action("ListCompany","Company")" />
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/CompanyCrud.js"></script>


