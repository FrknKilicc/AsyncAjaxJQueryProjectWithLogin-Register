@model CoreAjaxProject.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded pl-5 pr-5 pb-5">
            <div class="text-center">
                <h1 class="text-info">Kullanıcı Kayıt formu</h1>
            </div>
            <form method="post" asp-action="SignUp">
                <div class="form-group">
                    <label asp-for="UserNamee"></label>
                    <input type="text" asp-for="UserNamee" placeholder="Kullanıcı Adı" class="form-control" autocomplete="off" />

                </div>

                <div class="form-group">
                    <label asp-for="EMail"></label>
                    <input type="text" asp-for="EMail" placeholder="Mail" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input type="text" asp-for="PhoneNumber" placeholder="Telefon" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="Passwordd"></label>
                    <input type="text" asp-for="Passwordd" placeholder="Şifre" class="form-control" autocomplete="off" />

                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPasswordd"></label>
                    <input type="text" asp-for="ConfirmPasswordd" placeholder="Şifre" class="form-control" autocomplete="off" />

                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Kayıt Ol" />

                </div>
            </form>
        </div>
    </div>
</div>