@model CoreAjaxProject.Models.ViewModel.LoginViewModel;
@{
    ViewData["Title"] = "Şifremi Unuttum"; 
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border border-primary rounded pl-5 pr-5 pb-5">
            <form method="post" asp-action="ForgotPassword" id="forgotPasswordForm">
                <div class="form-group">
                    <label>E-posta</label>
                    <input type="email" name="email" placeholder="E-posta Giriniz" class="form-control" required />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary mb-2" value="Şifre Sıfırlama Talebi Gönder" asp-action="Login"/>
                </div>
            </form>

            @if (TempData["resetMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["resetMessage"]
                </div>
            }

            @if (TempData["resetError"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["resetError"]
                </div>
            }
        </div>
    </div>
</div>
